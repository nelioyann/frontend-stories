---
layout: layouts/nested-page-layout.njk
title: All findings 
page_description: Findings grouped by category.
permalink: /findings/
eleventyComputed:
    description: "Explore findings from Frontend Stories. {{meta.site_description}}"
    eleventyNavigation:
        key: Findings
        parent: Home
---

<h1>
    {{ title }}
</h1>
<p>
    {{ page_description }}
</p>
<ul role="list"  data-accordion data-props="noMeasure space:l">
    {%- for category in collections.categories %}
        {% set entries = collections.stories | filterByCategory(category) %}
        <details data-sticky open>
            <summary>
                <span>
                    {{ category }}
                </span>
                {# <span>
                    ({{ entries.length }})
                </span> #}
            </summary>
            <ul class="story-cards" data-props="space:s" role="list" data-layout="grid">
                {% for entry in collections.stories | filterByCategory(category) %}
                    {% include "partials/story-card-entry.njk" %}
                {% endfor %}
            </ul>
        </details>
    {% endfor -%}
</ul>