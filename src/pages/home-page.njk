---
layout: layouts/home-layout.njk
hero_description: A collection of findings and insights for building better user interfaces.
pagination: 
    data: collections.categoriesAndAll
    size: 1
    alias: currentCategory
permalink: "{% if currentCategory == 'All'%}/{% else %}/{{currentCategory | slugify}}/index.html{% endif %}"
eleventyComputed:
    title: "Home - {{currentCategory}} | Frontend Stories"
    description: "Home - {{currentCategory}} {{meta.site_description}}"
    eleventyNavigation:
        key: Home
        title: Home
---

<section class="home-cover-section" data-layout="cover" data-props="noPad">
    <div data-layout="stack" data-props="y:center centered">
        <h1 class="visually-hidden" data-heading="1">{{ meta.site_name }}
            <span >| {{ currentCategory }}</span>
        </h1>
        <p data-heading="1">{{ hero_description or meta.site_description }}</p>
    </div>
</section>
<section id="findings" data-layout="stack slice" data-props="space:xs">
    <h2 class="visually-hidden" data-heading="5">Browse by categories</h2>
    <nav class="categories-navigation">
        <ul role="list" data-layout="reel" data-props="noPad noBorder overflowing:noBar">
            {%- for category in collections.categoriesAndAll %}
                {% set category_url = '' if category == 'All' else category | slugify %}
                <li data-layout="stack" data-active="{{ 'true' if currentCategory == category else 'false' }}">
                    <a
                        data-props="x:center"
                        data-button="small {{ 'active' if currentCategory == category }} tag"
                        href="/{{ category_url }}#findings">{{ 'Latest' if category == 'All' else category }}</a>
                </li>
            {% endfor -%}
        </ul>
    </nav>
    <h3 data-heading="5" class="visually-hidden">
        {{ "Newest" if currentCategory == 'All' else currentCategory }}
    </h3>
    <ul class="story-cards" data-layout="grid" data-props="noPad space:s" role="list">
        {% set entries = collections.stories | filterByCategory(currentCategory) | limitTo(4) %}
        {%- for entry in entries %}
            {% include "partials/story-card-entry.njk" %}
        {% endfor -%}
    </ul>
    <span>
        {% set view_all_url = "findings" if currentCategory == "All" else "categories/"+currentCategory | slugify %}
        {% set see_more_button_text = "Explore all findings" if currentCategory == "All" else "Explore more findings about "+currentCategory %}
        <a data-link href="/{{ view_all_url }}">
            {{ see_more_button_text }}
        </a>
    </span>
</section>
