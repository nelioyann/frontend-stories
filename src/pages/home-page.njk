<article data-layout="stack" data-props="space:l">
    <section data-layout="cover" data-props="noPad">
        <h1>Frontend Stories</h1>
        <p>{{ meta.site_description }}</p>
        <div>
            <a data-button="variant:primary" href="/categories">Browse all categories</a>
        </div>
    </section>
    <section data-layou="stack">
        <div data-layout="cluster" data-props="x:between y:center">
            <h2 data-layout="cluster" data-props="space:xs" data-heading="4">
                {% include "icons/content-icon.njk" %}
                <span>
                    Effective web content
                </span>
            </h2>
            <a data-link href="/categories/effective-web-content/">
                See more
                {# <span aria-hidden="true">üëÅ</span> #}
            </a>
        </div>
        <ul data-layout="reel" data-props="noBorder">
            {% set entries = stories | limitTo(6) %}
            {%- for entry in entries %}
                {% include "partials/story-card-entry.njk" %}
            {% endfor -%}
        </ul>
    </section>
</article>