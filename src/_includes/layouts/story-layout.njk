{% extends "layouts/base.njk" %}
{% block content %}
    <div class="story-with-sidebar" data-layout="with-sidebar" data-props="side:left">
        <aside>
            {% set previousPageHref = "/stories" %}
            {% set previousPageLabel = "view all stories" %}
            <nav aria-label="Table of contents">
                {% include "partials/page-return-navigation.njk" %}
                <ol data-layout="stack" data-props="split">
                    <li>
                        <a data-link href="#cover">Cover</a>
                    </li>
                    <li>
                        <a data-link href="#summary">Summary</a>
                    </li>
                    <li>
                        <a data-link href="#sources">Sources</a>
                    </li>
                    <li>
                        <a data-link href="#related">Related</a>
                    </li>
                </ol>
            </nav>
        </aside>
        <article data-layout="stack" data-props="space:2xl">
            {{ content | safe }}
        </article>
    </div>
{% endblock %}