{% block content %}
    {% include "partials/site-breadcrumbs.njk" %}
    <div class="story-with-sidebar" data-layout="with-sidebar" data-props="side:left">
        <aside id="story-details">
            {% block aside %}{% endblock %}
        </aside>
        <article itemscope itemtype="http://schema.org/Article" itemref="story-details" data-layout="stack" style="--space: calc(var(--space-xl) * 2);">
            {% block main %}{% endblock %}
        </article>
    </div>
{% endblock %}