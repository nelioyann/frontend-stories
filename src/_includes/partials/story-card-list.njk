<div data-layout="stack" data-props="space:xl">
    <ul data-layout="cluster" data-props="space:s noPad y:stretch"> 
        {%- for story in entries -%}
            {# {{page | log}} #}
            <li class="story-card" data-layout="box stack" data-shadow="hoverable focusable">
                <a data-heading="5" href="/stories/{{ story.name | slugify }}">{{ story.name }}</a>
                {% if story.categories.length %}
                    <div data-layout="cluster">
                        {%- for category in story.categories %}
                            <span class="story-tag">{{ category.name }}</span>
                        {% endfor -%}
                    </div>
                {% endif %}
            </li>
        {%- endfor -%}
    </ul>
    <nav data-layout="stack" aria-labelledby="my-pagination">
        <h2 data-heading="5" id="my-pagination">Pagination</h2>
        <ol data-layout="cluster">
            <li data-layout="box">
                {% if pagination.href.previous %}
                    <a href="{{ pagination.href.previous }}">Previous</a>
                    {% else %}Previous{% endif %}
            </li>
            {%- for pageEntry in pagination.pages %}
                <li data-layout="box">
                    <a href="{{ pagination.hrefs[ loop.index0 ] }}" {% if page.url == pagination.hrefs[ loop.index0 ] %} aria-current="page" {% endif %}>{{ loop.index }}</a>
                </li>
            {%- endfor %}
            <li data-layout="box">
                {% if pagination.href.next %}
                    <a href="{{ pagination.href.next }}">Next</a>
                    {% else %}Next{% endif %}
            </li>
        </ol>
    </nav>
</div>