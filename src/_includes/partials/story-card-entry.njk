<li>
    <article itemscope itemtype="http://schema.org/Article" class="story-card" data-props="noMeasure">
        <header>
            <h3 data-heading="5">
                <a itemprop="url" data-button="link" class="story-card__title" href="/{{ entry.slug }}">{{ entry.name }}</a>
            </h3>
        </header>
        <p>{{ entry.excerpt }}</p>
        <meta itemprop="headline" content="{{ entry.name }}"/>
    </article>
</li>