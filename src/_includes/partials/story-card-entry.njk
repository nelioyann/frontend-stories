<li class="story-card" data-layout="box stack" data-shadow="hoverable focusable">
    <a data-heading="5" href="/stories/{{ entry.name | slugify }}">{{ entry.name }}</a>
    {% if entry.categories.length %}
        <div data-layout="cluster">
            {%- for category in entry.categories %}
                <a href="/categories/{{category.name | slugify}}" class="story-tag">{{ category.name }}</a>
            {% endfor -%}
        </div>
    {% endif %}
</li>