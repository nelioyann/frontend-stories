<li data-props="noMeasure">
    <article itemscope="itemscope" itemtype="http://schema.org/Article" data-layout="cluster" data-props="space:xs x:between" style="flex-wrap: wrap-reverse;">
        <a itemprop="url" data-button="link"  href="/{{ entry.slug }}">{{ entry.name }}</a>
        <time itemprop="dateModified" datetime="{{ story.edited }}">{{entry.edited | readableDate}}</time>
        <meta itemprop="headline" content="{{ entry.name }}"/>
    </article>
</li>