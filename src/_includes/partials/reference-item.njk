<li class="reference-item" id="fn{{ loop.index0 }}">
    <a
        data-button="text" rel="noopener" target="{{ '_blank' if reference.url }}" href="{{ (reference.url if reference.url else '#') }}">
        <span>
            <span>
                {{ reference.name }}
            </span>
            <i>({{ reference.cite if reference.cite }})</i>
        </span>
    </a>
</li>