<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ meta.site_name + " - " + title }}</title>
    <meta name="description" content="{{meta.site_description}}">
    <link rel="stylesheet" href="/css/style.css">
    <meta name="theme-color" content="{{meta.theme_color}}">
    <meta name="apple-mobile-web-app-status-bar-style" content="{{meta.theme_color}}">
    <meta name="title" content="{{title}}">
    <!-- Open graph - Facebook 1200 x 628 -->
    <meta property="og:image" content="{{meta.site_thumbnail}}">
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{meta.site_url}}">
    <meta property="og:title" content="{{title}}">
    <meta property="og:description" content="{{meta.site_description}}">
    <!-- Open graph - Twitter -->
    <meta name="twitter:image" content="{{meta.site_thumbnail}}">
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:creator" content="{{meta.twitter_name}}">
    <meta name="twitter:site" content="{{meta.twitter_name}}">
    <meta name="twitter:text:title" content="{{meta.title}}">

    <!-- favicons -->
    <link rel="shortcut icon" href="/images/icons/icon-16.png" type="image/x-icon" sizes="16x16" />
    <link rel="shortcut icon" href="/images/icons/icon-32.png" type="image/x-icon" sizes="32x32" />
    <link rel="icon" type="image/png" sizes="196x196" href="images/icons/icon-196.png">
    <link rel="apple-touch-icon" href="images/icons/icon-180.png">
    {# Author etc #}
    <meta name="author" content="{{meta.site_author}}">

</head>