---
pagination: 
    data: collections.stories
    size: 1
    alias: story
    addAllPagesToCollections: true
layout: layouts/base-layout.njk
permalink: /{{story.slug}}/
og_type: "article"
eleventyComputed:
    title: "{{ story.name | truncate(160) }} "
    thumbnail: "{{meta.site_url}}/assets/images/og-images/og-{{ story.slugs }}.png"
    emojicon: "{{ story.icon }}"
    description: "{{story.description}}"
    markdownContent: "{{story.markdownContent}}"
    eleventyNavigation:
        key: "{{story.id}}"
        title: "{{story.name}}"
        parent: "{{story.category.name}}"
---
{% extends "layouts/story-layout.njk" %}
{% set story_contribution_url = contribute.tally_url+"?slugs="+story.slugs+"&title="+story.name+"&category="+story.category.name %}
{% block article %}
    <header aria-labelledby="headline">
        <h1 itemprop="headline" id="headline" data-props="centered noBorder  space:2xs">
            {% if emojicon %}
                <span aria-hidden="true" data-font="emoji">{{ emojicon }}</span>
            {% endif %}
            {{ story.name }}
        </h1>
        {# <div data-layout="switcher box">
